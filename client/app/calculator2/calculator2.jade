div(ng-include='"components/navbar/navbar.html"')

h3.JumboTron Calculator
br

.col-md-12

    form.form(name='calculator', ng-submit='calculateApi(form)', no-validate='')
        .formgroup
            label(for='pv') Present Value (PV)
            input.form-control(id='pv', type='number', step='any', name='pv', ng-model='calculatorInput.presentValue')
        .formgroup
            label Years (N)
            input.form-control(type='number', name='n', ng-model='calculatorInput.numberOfYears')
        .formgroup
            label Interest Rate (I)
            input.form-control(type='number', step='any', name='i', ng-model='calculatorInput.interestRate')
        .formgroup
            label Payments (AMT)
            input.form-control(type='number', step='any', name='amt', ng-model='calculatorInput.payment')
        .formgroup
            label(for='payment') Payment Frequency
            select.form-control(ng-model='calculatorInput.paymentFrequency', ng-options='frequency.name for frequency in frequencies')
        br
        div
            button.btn.btn-inverse.btn-lg.btn-login(type='submit') Calculate
br
br

.col-md-12
    div(ng-show='calculatorOutput.futureValue')
        p
            b Future Value: {{calculatorOutput.futureValue | number : 2}}
        p
            b Drawable Income: {{calculatorOutput.inflationAdjustedIncome | number : 2}}

